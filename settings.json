{
  "permissions": {
    "allowedTools": [
      "Read",
      "Write",
      "Cat",
      "Grep",
      "Bash(pnpm *)",
      "Bash(git *)",
      "Bash(ts-node *)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(private_keys*)",
      "Read(.solana*)",
      "Write(production.config.*)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Awaiting your input\" with title \"Claude Code\" sound name \"Ping\"' && open -a \"antigravity\""
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Awaiting your input\" with title \"Claude Code\" sound name \"Ping\"' && open -a \"antigravity\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Task complete\" with title \"Claude Code\" sound name \"Glass\"' && open -a \"antigravity\""
          }
        ]
      }
    ]
  },
  "effortLevel": "high",

  "statusLine": {
    "type": "command",
    "command": "~/.claude/status-line.sh"
  }
  
}
